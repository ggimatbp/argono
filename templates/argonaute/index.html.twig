{% extends 'base.html.twig' %}

{% block title %}Argonaute index{% endblock %}

{% block body %}


<header>
  <h1>
    <img src="https://www.wildcodeschool.com/assets/logo_main-e4f3f744c8e717f1b7df3858dce55a86c63d4766d5d9a7f454250145f097c2fe.png" alt="Wild Code School logo" />
    Les Argonautes
  </h1>
</header>
<main>
    <h2>Ajouter un(e) Argonaute</h2>
    <div class="d-flex">
      {{ include('argonaute/_form.html.twig') }}  
   </div>
    <div class="d-flex">
        {% for argonaute in argonautes %}
        <div class="wrap d-flex flex-column">
            <h3>{{ argonaute.name }}</h3>
                        <div class="actions">
                            
                            <form action="{{ path('app_argonaute_edit', {'id': argonaute.id}) }}" method="get">
                                <button class="btn" type="submit" ><i class="fas fa-pencil-alt"></i></button>
                            </form>
                                    {{ include('argonaute/_delete_form.html.twig') }}  
                        </div>
        </div>
            {% else %}
                <h3>Aucun résultat</h3>
        {% endfor %}
    </div>
</main>
<footer>
  <p>Réalisé par Jason en Anthestérion de l'an 515 avant JC</p>
</footer>
{% endblock %}
